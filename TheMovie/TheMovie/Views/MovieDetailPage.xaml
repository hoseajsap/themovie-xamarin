<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TheMovie.Views.MovieDetailPage"
    Title="Movie Detail">
    <ContentPage.Content>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <Label Text="{Binding MovieDetails.original_title}" FontSize="Title" TextColor="Black"/>
                <Label Text="{Binding MovieDetails.overview}" FontSize="16" Padding="0,0,0,0" TextColor="Black"/>
                <Button Margin="0,10,0,0" Text="Trailer on Youtube"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
            </StackLayout>
        </ScrollView>
    </Grid>
    </ContentPage.Content>
</ContentPage>

